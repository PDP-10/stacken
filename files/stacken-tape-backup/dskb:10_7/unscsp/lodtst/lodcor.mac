	TITLE	LODCOR
	SUBTTL	PROGRAM TO CHANGE CORE SIZE
	SEARCH	LODUNV

LODCOR:	DEFINT			;INITIALIZE
LOOP:	PUSHJ	P,RANHGH	;CHANGE HI & LO SEG SIZE
	PUSHJ	P,TESTEX	;CHECK FOR END OF TEST
	JRST	LOOP		;REPEAT

	DEFALL
	DEFHGH

ERRSLP:	EXP	^D10		;SECONDS TO SLEEP ON ERROR
HGHRNG:	EXP	32.0		;RANGE OF HIGH SEG SIZES IN PAGES
HGHBAS:	EXP	0.0		;MIN HIGH SEG SIZE
LOWRNG:	EXP	32.0		;RANGE OF LOW SEG SIZES IN PAGES
LOWBAS:	EXP	0.0		;MIN LOW SEG SIZE

	END	LODCOR
